#include <stdio.h>
#define NUMERO_DE_TENTATIVAS 5
int main(){
    //comentario
printf("Bem vindo ao jogo de adivinhacao\n");
// atribui o valor 5 ao numero secreto
int numero_secreto = 5;
printf("numero secreto e %d ",numero_secreto);
// FOR, PARA DE EXECUTAR
int chute;
for (int i = 1; i <= NUMERO_DE_TENTATIVAS; i++)
{
    printf("Qual e o seu chute? \n");
    printf("Tentativa %d de %d\n",i, NUMERO_DE_TENTATIVAS);
    scanf("%d", &chute);
    printf("seu chute foi %d\n",chute);
    int acertou = (chute == numero_secreto);
    int maior = chute > numero_secreto;
    int menor = chute < numero_secreto;
    if (acertou) {
        printf("Parabens ! Voce acertou!\n");

        break;
    }
    else if (maior){
            printf("Voce errou\n");
            printf("O numero digitado e maior do que o numero secreto!\n");
        }
    else if(menor)
    {   
            printf("Voce errou\n");
            printf("O numero digitado e menor do que o numero secreto!\n");
 }
}
}


